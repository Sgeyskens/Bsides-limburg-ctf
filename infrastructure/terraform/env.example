################################################################################
# Proxmox connection settings
################################################################################

# List of Proxmox nodes where VMs can be scheduled.
# Order matters: index 0 is used for first VM, index 1 for second, etc.
pm_hosts = [
  "pve1",
  "pve2",
  "pve3"
]

# Proxmox API endpoint URL
# Format: https://<proxmox-host>:8006/api2/json
pm_api_url = "https://pve.example.com:8006/api2/json"

# Proxmox API token ID
# Format: user@realm!token-name
pm_api_token_id = "terraform@pve!terraform"

# Proxmox API token secret (KEEP THIS SECRET)
pm_api_token_secret = "REPLACE_WITH_SECRET"


################################################################################
# VM template & SSH access
################################################################################

# Name of the Proxmox VM template used to clone new VMs
template_name = "ubuntu-cloud"

# SSH public key injected via cloud-init (single string)
SSH_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIB... user@host"


################################################################################
# Network configuration
################################################################################

# Network prefix (first three octets)
network = "192.168.1"

# Subnet mask in CIDR notation
subnet_mask = "/24"

# Default gateway for all VMs
gateway = "192.168.1.1"

# Disable IPv6 on all VMs
true = disabled, false = enabled
disabled_ipv6 = true

# DNS servers (space-separated)
dns_servers = "1.1.1.1 8.8.8.8"


################################################################################
# Storage configuration
################################################################################

# Proxmox storage where VM disks will be created
storage_location = "local-lvm"

# Proxmox storage where cloud-init ISO/config is stored
cloud_image_location = "storage"


################################################################################
# Kubernetes Master Nodes configuration
################################################################################

# Number of Kubernetes master/control-plane nodes
ms_count = 3

# Start of the vmid
ms_vmid = 200

# CPU cores per master node
ms_cpu_cores = 3

# CPU sockets per master node
ms_cpu_sockets = 1

# RAM (in MB) per master node
ms_memory = 6144

# Disk size for master nodes
ms_storage_size = "50G"

# Proxmox bridge/interface for master nodes
ms_network_interface = "vmbr1"

# Cloud-init user for master nodes
ms_ci_user = "root"

# Cloud-init password for master nodes (CHANGE THIS)
ms_ci_password = "REPLACE_ME"


################################################################################
# Kubernetes Worker Nodes configuration
################################################################################

# Number of worker nodes
sl_count = 3

# Start of the vmid
ms_vmid = 300

# CPU cores per worker node
sl_cpu_cores = 7

# CPU sockets per worker node
sl_cpu_sockets = 1

# RAM (in MB) per worker node
sl_memory = 16384

# Disk size for worker nodes
sl_storage_size = "75G"

# Proxmox bridge/interface for worker nodes
sl_network_interface = "vmbr1"

# Cloud-init user for worker nodes
sl_ci_user = "root"

# Cloud-init password for worker nodes (CHANGE THIS)
sl_ci_password = "REPLACE_ME"


################################################################################
# HAProxy Node configuration
################################################################################

# Number of HAProxy nodes (usually 1)
pr_count = 1

# Start of the vmid
ms_vmid = 400

# CPU cores for HAProxy
pr_cpu_cores = 2

# CPU sockets for HAProxy
pr_cpu_sockets = 1

# RAM (in MB) for HAProxy
pr_memory = 4096

# Disk size for HAProxy
pr_storage_size = "25G"

# Proxmox bridge/interface for HAProxy
pr_network_interface = "vmbr1"

# Cloud-init user for HAProxy
pr_ci_user = "root"

# Cloud-init password for HAProxy (CHANGE THIS)
pr_ci_password = "REPLACE_ME"
